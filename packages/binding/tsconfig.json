{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "types": ["node"]
  },
  "include": ["."],
  "exclude": ["node_modules", "benchmark", "__test__", ".cargo"]
}
